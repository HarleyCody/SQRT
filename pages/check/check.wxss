/* pages/check/check.wxss */
page{
  width:100%;
  height: 100%
}
.checkDetails{
  width:100%;
  display: flex;
  font-size: 20%;
  margin-bottom: 8%;
  align-items: center;
  justify-content: center;
}
.textAndInput{
  display: flex;
  margin-top: 8%;
  align-items: center;
  flex-direction: row;
  justify-content: space-between
}
.text{
  flex:1;
  font-size: 100%;
}
.input{
  flex:5;
  margin-left: 5px;
  font-size:100%;
}

.radioView{
  flex:5;
  margin-left: 5px;
  width:100%;
  margin-top:8%;
  font-size: 20%;
  align-items: center;
  justify-content: center;
}

.radios{
  flex:6;
  width: 100%;
  height: 100%;
  columns: 2;
  column-gap: 10%;
  line-height: 28px;
  row-gap: 20%
}
.radio{
  text-align: center;
  width: 100%;
}
.checked{
  background:#D6EAF8;
  border: #D6EAF8 2px solid;
  border-radius: 5px;
  font-size: 10px;
  padding: 2px 8px;
}
.normal{
  color: #17202A;
  border: #D6EAF8 2px solid;
  border-radius: 5px;
  font-size: 14px;
  padding: 2px 8px;
}

.results{
  display: flex;
  margin-bottom: 8%;
  align-items: center;
  flex-direction: row;
  justify-content: space-between
}

.pay{
  margin-top: 2%;
  position: fixed;
  bottom: 0;
  width:100%;
  height:10%;
  background: #AED6F1;
  color:#D6EAF8;
  border: none
}